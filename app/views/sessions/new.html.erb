 <body>
  <!-- Navigation ends here -->

  <!--- Header starts here -->
<div class="sessionscontrollernew container" >

  <div id="header" class="header">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-6 wow bounceInLeft">
          <h2>Come join us with</h2><br>
          <h1>EVENTS AROUND</h1>
          <div class="row loginthrough">
            <div class="col-xs-6 text-left">
              <div class="gmail">
                <a href="#"><i class="fa fa-envelope" aria-hidden="true"></i>Continue with Gmail</a>
              </div>  
            </div>
            <div class="col-xs-6 text-right">
              <div class="facebook">
                <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i>Continue with Facebook</a>
              </div>
            </div>
          </div>
          <hr>
          <%= form_tag do %>
			<fieldset>
          		<div class="enter">
          			<div class="notice">
          				<% if flash[:alert] %>
							<p id="notice"><%= flash[:alert] %></p>
						<% end %>
					</div>
            		<div class="input-group input-group-lg wow fadeInUp" data-wow-delay="0.8s">

						<span class="input-group-addon" id="sizing-addon1"><i class="fa fa-user-circle" aria-hidden="true" ></i></span>

              			<%= text_field_tag(:name, params[:name], class: 'form-control', area: {describedby: 'sizing-addon1'}, placeholder: 'Username') %>
              		</div>
             		<div class="input-group input-group-lg wow fadeInUp" data-wow-delay="0.8s">
              			<span class="input-group-addon" id="sizing-addon1"><i class="fa fa-key " aria-hidden="true" ></i></span>
              			<%= password_field_tag(:password, params[:password], class: 'form-control', area: {describedby: 'sizing-addon1'}, placeholder: 'Password') %>
                    </div>
            		<div class="buttonlogin">
           				<button class="btn btn-lg btn-primary wow fadeInUp" data-wow-delay="1s"><i class="fa fa-sign-in " aria-hidden="true" ></i>Login</button>
            		</div>
          		</div>	
          	</fieldset>
		  <% end %>
        </div>
        <div class="col-lg-6 col-md-6 wow bounceInRight">
          <img src="devices.jpg" alt="">
        </div>
      </div>
    </div>
  </div>
</div>
  <!-- Header ends here -->



    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/wow.min.js"></script>
    <script>
    new WOW().init();
    </script>
    <script src="js/bootstrap.min.js"></script>
  </body>