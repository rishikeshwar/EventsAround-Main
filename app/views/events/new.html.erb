




<%= csrf_meta_tags %>
<div class="events_new">

<div class="container">

  <div class="row body">
    
      <ul>
   
            <h1><font color="white" size="6px"><strong>CREATE NEW EVENT</strong></font></h1>
          
            <br>
            
        <%= form_tag(user_events_path, method: :post) do %>

        <p>
          <li>
              <%= label_tag :lname, 'Event Name'%>
          <%= text_field_tag :name, params[:name], class: 'form-control'%>
          </li>
         </p>

         <p>
          <li>
            <%= label_tag :lvenue, 'Venue'%>
      <%= text_field_tag :venue, params[:venue], class: 'form-control' %> 
       </li>
          </p>
     
          
        
         <p>
           <li>
              <%= label_tag :lftype, 'Fest Type' %>
        <%= text_field_tag :festtype, params[:festtype], class: 'form-control'%> 
          </li> 
         </p>
               

        <p>
          <li>
              <%= label_tag :linfo, 'Information' %>
          <%= text_area_tag :information, params[:information], size: '46x4', class: 'form-control' %>
          </li>
        </p>

        <p>
        <li>
           <%= label_tag :fweb, 'fest website' %>
       <%= text_field_tag :festwebsite, params[:festwebsite], class: 'form-control' %>
        </li>
        </p>

        <p>
        <li>
          <%= label_tag :fb, 'fb link' %>
      <%= text_field_tag :fblink, params[:fblink], class: 'form-control' %>
        </li>
        </p>



        <p>
        <li>
           <%= label_tag :sdate, 'start date' %>
         <%= text_field_tag :startdate, params[:startdate], class: 'form-control', type: 'date' %>
        </li>
        </p>


        <p>
        <li>
          <%= label_tag :edate, 'end date' %>
         <%= text_field_tag :enddate, params[:enddate], class: 'form-control', type: 'date' %>
        </li>
        </p>

        <p>
        <li>
      <%= label_tag :e1, 'Email Id' %>
      <%= text_field_tag :email1, params[:email1], class: 'form-control' %>
        </li>
        </p>

        <p>
        <li>
        <%= label_tag :e2, 'Secondary Email Id' %>
      <%= text_field_tag :email2, params[:email2], class: 'form-control' %>
        </li>
        </p>

        <p>
        <li>
          <%= label_tag :p1, 'Phone 1' %>
      <%= text_field_tag :phone1, params[:phone1], class: 'form-control' %>
        </li>
        </p>
        

        <p>
        <li>
          <%= label_tag :p2, 'Phone 2' %>
      <%= text_field_tag :phone2, params[:phone2], class: 'form-control' %>
        </li>
        </p>

        <p>
        <li>
          <%= label_tag :lfee, 'Fee' %>
      <%= text_field_tag :fee, params[:fee], class: 'form-control' %>
        </li>
        </p>

        
        <li>
          <%= submit_tag 'Submit', class: 'btn btn-submit' %>
        </li>

        <%end%>
      </ul>
   
  </div>
</div>


</div>





