<h1>events new</h1>
<%= form_tag(user_event_path(@user, @event), method: :put) do %>
<fieldset>
	<legend>Please Enter below information</legend>
	<div class="container">
		<%= label_tag :lname, 'Event Name' %>
		<%= text_field_tag :name, @event.name %>
		
		<%= label_tag :lvenue, 'Venue' %>
		<%= text_field_tag :venue, @event.venue %>

		<%= label_tag :linfo, 'Information' %>
		<%= text_area_tag :information, @event.information %>

		<%= label_tag :fweb, 'fest website' %>
		<%= text_field_tag :festwebsite, @event.festwebsite %>

		<%= label_tag :fb, 'fb link' %>
		<%= text_field_tag :fblink, @event.fblink %>

		<%= label_tag :sdate, 'start date' %>
		<%= date_select('range1', 'startdate', :order => [:month, :day, :year])%>


		<%= label_tag :edate, 'end date' %>
		<%= date_select('range2', 'enddate', :order => [:month, :day, :year], selected: @event.startdate)%>

		<%= label_tag :e1, 'Email Id' %>
		<%= text_field_tag :email1, @event.email1 %>

		<%= label_tag :e2, 'Secondary Email Id' %>
		<%= text_field_tag :email2, @event.email2 %>

		<%= label_tag :p1, 'Phone 1' %>
		<%= text_field_tag :phone1, @event.phone1 %>


		<%= label_tag :p2, 'Phone 2' %>
		<%= text_field_tag :phone2, @event.phone2 %>


		<%= label_tag :lfee, 'Fee' %>
		<%= text_field_tag :fee, @event.fee %>

		
	</div>
	<div>
		<%= submit_tag 'Submit' %>
	</div>
</fieldset>

		


<%end%>